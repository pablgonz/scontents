    \char_set_active_eq:Nc #1 { @@_active_char_ \token_to_str:N #1 : }
    \cs_set:cpx { @@_active_char_ \token_to_str:N #1 : }
      {
        \mode_leave_vertical:
        \tex_kern:D \c_zero_dim
        \char_generate:nn { `#1 } { 12 }
      }
  }
